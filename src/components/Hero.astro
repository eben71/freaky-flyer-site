---
// TODO: Add hero placeholder image at public/assets/brand/hero-placeholder.jpg
const {
  image = "/assets/brand/hero-placeholder.jpg",
  kicker = "Perth-wide GPS flyer distribution",
  title = "Freaky Flyer Delivery",
  text = "",
  primaryHref = "/contact",
  primaryText = "Get a Quote",
  secondaryHref = "/pricing",
  secondaryText = "View Pricing",
} = Astro.props;
const hasActionsSlot = Astro.slots.has("actions");
---
<section class="hero section angled-top">
  <div class="hero__bg" style={`background-image:url(${image})`}></div>
  <div class="hero__overlay"></div>
  <div class="container hero__content">
    <p class="kicker">#{kicker}</p>
    <h1 class="title">{title}</h1>
    {text && <p style="max-width:65ch">{text}</p>}
    {hasActionsSlot ? (
      <div class="hero__actions">
        <slot name="actions" />
      </div>
    ) : (
      <div class="hero__actions">
        <a href={primaryHref} class="button primary">{primaryText}</a>
        <a href={secondaryHref} class="button outline">{secondaryText}</a>
      </div>
    )}
  </div>
</section>
