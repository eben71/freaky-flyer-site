---
/**
 * @typedef {Object} AccordionItem
 * @property {string} question
 * @property {string[]} answer
 */

/**
 * @typedef {Object} AccordionProps
 * @property {string} [id]
 * @property {AccordionItem[]} items
 */

/** @type {AccordionProps} */
const props = Astro.props;
const { id, items = [] } = props;
const baseId = id ?? `accordion-${Math.random().toString(36).slice(2, 8)}`;
---

<div class="accordion" data-accordion>
  {
    items.map((item, index) => {
      const itemId = `${baseId}-item-${index + 1}`;
      const buttonId = `${itemId}-button`;
      const panelId = `${itemId}-panel`;
      return (
        <div class="accordion__item" data-accordion-item>
          <h3 class="accordion__heading">
            <button
              type="button"
              class="accordion__trigger"
              id={buttonId}
              aria-expanded="false"
              aria-controls={panelId}
              data-accordion-trigger
            >
              <span class="accordion__summary-text">{item.question}</span>
              <span class="accordion__icon" aria-hidden="true">
                <svg viewBox="0 0 24 24" focusable="false">
                  <path d="M12 15.6 5.4 9l1.2-1.2L12 13.2l5.4-5.4L18.6 9z" />
                </svg>
              </span>
            </button>
          </h3>
          <div
            class="accordion__panel"
            id={panelId}
            role="region"
            aria-labelledby={buttonId}
            hidden
            data-accordion-panel
          >
            {item.answer.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
      );
    })
  }
</div>

<style>
  .accordion {
    display: grid;
    gap: var(--space-4);
  }

  .accordion__item {
    border-radius: var(--radius, 14px);
    background: #fff;
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  .accordion__heading {
    margin: 0;
  }

  .accordion__trigger {
    width: 100%;
    border: 0;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-6);
    cursor: pointer;
    font-weight: 600;
    font-size: 1.05rem;
    text-align: left;
    color: inherit;
  }

  .accordion__trigger:focus {
    outline: none;
  }

  .accordion__trigger:focus-visible {
    outline: 3px solid var(--accent);
    outline-offset: 4px;
    border-radius: 10px;
  }

  .accordion__summary-text {
    flex: 1;
    text-wrap: balance;
  }

  .accordion__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 999px;
    background: rgba(137, 4, 11, 0.12);
    color: var(--accent);
    transition: transform 160ms ease;
  }

  .accordion__icon svg {
    width: 1.25rem;
    height: 1.25rem;
    fill: currentColor;
    transition: transform 160ms ease;
  }

  .accordion__panel {
    padding: 0 var(--space-6) var(--space-6);
    display: grid;
    gap: var(--space-3);
    line-height: 1.8;
  }

  .accordion__panel p {
    margin: 0;
  }

  .accordion__item.is-open .accordion__icon svg {
    transform: rotate(180deg);
  }

  @media (max-width: 720px) {
    .accordion__trigger {
      padding: var(--space-5);
    }

    .accordion__panel {
      padding: 0 var(--space-5) var(--space-5);
    }
  }
</style>

<script is:inline>
  (() => {
    const setup = () => {
      const accordions = Array.from(
        document.querySelectorAll('[data-accordion]')
      );
      if (accordions.length === 0) {
        return;
      }

      const mediaQuery = window.matchMedia('(min-width: 768px)');

      accordions.forEach((accordion) => {
        const triggers = Array.from(
          accordion.querySelectorAll('[data-accordion-trigger]')
        );
        const panels = new Map();

        triggers.forEach((trigger) => {
          const panelId = trigger.getAttribute('aria-controls');
          if (panelId) {
            const panel = accordion.querySelector(`#${panelId}`);
            if (panel instanceof HTMLElement) {
              panels.set(trigger, panel);
            }
          }
        });

        const toggleItem = (trigger, expand) => {
          const panel = panels.get(trigger);
          const item = trigger.closest('[data-accordion-item]');
          if (!panel || !item) {
            return;
          }
          if (expand) {
            trigger.setAttribute('aria-expanded', 'true');
            panel.hidden = false;
            item.classList.add('is-open');
          } else {
            trigger.setAttribute('aria-expanded', 'false');
            panel.hidden = true;
            item.classList.remove('is-open');
          }
        };

        const collapseOthers = (current) => {
          if (!mediaQuery.matches) {
            return;
          }
          triggers.forEach((trigger) => {
            if (trigger !== current) {
              toggleItem(trigger, false);
            }
          });
        };

        triggers.forEach((trigger) => {
          toggleItem(trigger, false);
          trigger.addEventListener('click', () => {
            const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
            if (isExpanded) {
              toggleItem(trigger, false);
            } else {
              collapseOthers(trigger);
              toggleItem(trigger, true);
            }
          });
        });
      });
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', setup, { once: true });
    } else {
      setup();
    }
  })();
</script>
