---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/areas', label: 'Areas' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---
<header class="site" role="banner">
  <div class="topbar">
    <div class="container topbar__content">
      <span class="muted">Perth-wide GPS flyer distribution</span>
      <div class="topbar__links">
        <a href="tel:+61812345678">Call (08) 1234 5678</a>
        <span aria-hidden="true">â€¢</span>
        <a href="mailto:hello@freakyflyer.example">hello@freakyflyer.example</a>
      </div>
    </div>
  </div>
  <div class="container">
    <nav class="nav" aria-label="Primary navigation">
      <a class="brand" href="/" aria-label="Freaky Flyer Delivery home">FFD</a>
      <details class="nav-menu">
        <summary aria-label="Toggle navigation" role="button">Menu</summary>
        <ul>
          {navItems.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))}
        </ul>
      </details>
      <ul class="nav-links">
        {navItems.map((item) => (
          <li>
            <a href={item.href}>{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style is:global>
.nav-links{display:flex;align-items:center;gap:var(--space-2);margin:0;padding:0;list-style:none}
.nav-links li{margin:0}
.nav-menu{display:none;position:relative}
.nav-menu summary{list-style:none;padding:10px 14px;border-radius:10px;font-weight:600;cursor:pointer}
.nav-menu summary::-webkit-details-marker{display:none}
.nav-menu[open] summary{background:var(--surface)}
.nav-menu ul{margin:var(--space-2) 0 0;padding:var(--space-3);border-radius:var(--radius);background:white;box-shadow:var(--shadow);list-style:none;display:grid;gap:var(--space-2)}
.nav-menu ul li{margin:0}
.topbar__content{display:flex;align-items:center;justify-content:space-between;gap:var(--space-3);flex-wrap:wrap}
.topbar__links{display:flex;align-items:center;gap:var(--space-2);flex-wrap:wrap}
@media (max-width:900px){
  .nav-links{display:none}
  .nav-menu{display:block}
  .nav-menu ul{position:absolute;right:0;min-width:200px}
}
</style>
