---
import { site } from "../site.config";
---
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    name: site.name,
    url: site.domain,
    email: site.email,
    telephone: site.phone,
    address: {
      "@type": "PostalAddress",
      streetAddress: site.address,
      addressLocality: "Perth",
      addressRegion: "WA",
      addressCountry: "AU",
    },
    openingHours: site.hours,
  })}
></script>
