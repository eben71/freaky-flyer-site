---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';

const breadcrumbs = [
  { href: '/', label: 'Home' },
  { href: '/pricing', label: 'Pricing' }
];
---
<BaseLayout
  title="Pricing | Freaky Flyer Delivery"
  description="Transparent flyer delivery pricing tiers with GPS verification included across Perth."
  breadcrumbs={breadcrumbs}
  pageType="article"
>
  <section class="section" aria-labelledby="pricing-heading">
    <div class="container">
      <h1 id="pricing-heading">Pricing</h1>
      <p class="lead">
        Every quote includes equalising, walker induction, GPS tracking and completion reports. Pricing below is indicative –
        request a tailored plan for seasonal peaks or rural add-ons.
      </p>
    </div>
  </section>

  <section class="section alt" aria-labelledby="table-heading">
    <div class="container">
      <h2 id="table-heading">Volume tiers</h2>
      <div class="table-wrapper" role="region" aria-live="polite">
        <table>
          <caption class="visually-hidden">Flyer delivery pricing tiers</caption>
          <thead>
            <tr>
              <th scope="col">Quantity tier</th>
              <th scope="col">Solo DL</th>
              <th scope="col">Shared DL</th>
              <th scope="col">Solo A5</th>
              <th scope="col">Solo A4</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">10,000 – 20,000</th>
              <td>$95 +GST / 1k</td>
              <td>$65 +GST / 1k</td>
              <td>$115 +GST / 1k</td>
              <td>$135 +GST / 1k</td>
            </tr>
            <tr>
              <th scope="row">20,001 – 40,000</th>
              <td>$90 +GST / 1k</td>
              <td>$60 +GST / 1k</td>
              <td>$110 +GST / 1k</td>
              <td>$130 +GST / 1k</td>
            </tr>
            <tr>
              <th scope="row">40,001 – 80,000</th>
              <td>$84 +GST / 1k</td>
              <td>$56 +GST / 1k</td>
              <td>$104 +GST / 1k</td>
              <td>$124 +GST / 1k</td>
            </tr>
            <tr>
              <th scope="row">80,001 +</th>
              <td>Custom proposal</td>
              <td>Custom proposal</td>
              <td>Custom proposal</td>
              <td>Custom proposal</td>
            </tr>
          </tbody>
        </table>
      </div>
      <p class="small" style="margin-top:1rem;">All pricing includes GPS verification exports and suburb completion summaries.</p>
      <a class="button secondary" href="#">Download PDF pricing</a>
    </div>
  </section>

  <section class="section" aria-labelledby="notes-heading">
    <div class="container">
      <h2 id="notes-heading">What influences pricing?</h2>
      <ul>
        <li>Lead time and preferred drop window</li>
        <li>Stock preparation requirements (folding, bundling, heavy stock)</li>
        <li>Regional coverage outside metro Perth</li>
        <li>Shared vs. solo exclusivity preferences</li>
        <li>Proof-of-delivery add-ons such as photo logs or advanced analytics</li>
      </ul>
      <p class="lead">Share your brief and we will confirm availability within one business day.</p>
    </div>
  </section>

  <CTA heading="Lock in your next delivery wave" body="Request a custom quote and we will build the right mix of walkers, GPS proof and scheduling for your campaign." />
</BaseLayout>
