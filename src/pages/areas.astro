---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadPage } from '../lib/content.ts';

const slug = 'areas';
const page = await loadPage(slug);
const title = (page?.fm?.title as string) ?? 'Service Areas | Freaky Flyer Delivery';
const description = (page?.fm?.description as string) ?? '';
---
<BaseLayout {title} description={description}>
  {page ? (
    <Fragment set:html={page.html} />
  ) : (
    <div class="stack">
      <h1>Service Areas</h1>
      <p>
        We specialise in Perth metro deliveries, covering northern and southern corridors with walkers
        matched to the suburbs you need to reach most.
      </p>
    </div>
  )}
</BaseLayout>
