---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadPage } from '../lib/content.ts';

const slug = 'services';
const page = await loadPage(slug);
const title = (page?.fm?.title as string) ?? 'Services | Freaky Flyer Delivery';
const description = (page?.fm?.description as string) ?? '';
---
<BaseLayout {title} description={description}>
  {page ? (
    <Fragment set:html={page.html} />
  ) : (
    <div class="stack">
      <h1>Services</h1>
      <p>
        Explore our end-to-end flyer delivery packages, from suburb selection and route planning to
        GPS-verified reporting once the drops are complete.
      </p>
    </div>
  )}
</BaseLayout>
