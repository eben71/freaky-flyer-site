---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadPage } from '../lib/content.ts';

const slug = 'about';
const page = await loadPage(slug);
const title = (page?.fm?.title as string) ?? 'About | Freaky Flyer Delivery';
const description = (page?.fm?.description as string) ?? '';
---
<BaseLayout {title} description={description}>
  {page ? (
    <Fragment set:html={page.html} />
  ) : (
    <div class="stack">
      <h1>About Freaky Flyer Delivery</h1>
      <p>
        Learn how our experienced distribution team blends on-the-ground knowledge with GPS tools to keep
        local campaigns accountable and effective.
      </p>
    </div>
  )}
</BaseLayout>
