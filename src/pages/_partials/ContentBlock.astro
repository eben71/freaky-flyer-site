---
import { sanitizeHtml } from '../../lib/sanitize';
const { html = "" } = Astro.props;
const clean = sanitizeHtml(html);
---
<section class="section">
  <div class="container">
    <div class="prose" set:html={clean} />
  </div>
</section>

<style>
.prose {
  max-width: 75ch;
  line-height: 1.7;
}
.prose h1, .prose h2, .prose h3 { margin-top: var(--space-8); }
.prose img { border-radius: var(--radius); box-shadow: var(--shadow); margin: var(--space-6) 0; }
.prose ul { padding-left: 1.25rem; }
.prose li { margin: .3rem 0; }
</style>
