---
import Base from '../layouts/BaseLayout.astro';
import EmailLink from '../components/EmailLink.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Base title="Contact" description="Get a quote or ask a question.">
  <section class="section surface">
    <div class="container grid cols-3">
      <div class="card" style="grid-column: span 2;">
        <h2>Send a message</h2>
        <ContactForm />
      </div>
      <aside class="card">
        <h3>Contact Details</h3>
        <p>
          <strong>Phone:</strong>
          <a href="tel:0894057777" target="_blank" rel="noopener"
            >08 9405 7777</a
          >
        </p>
        <p>
          <strong>Email:</strong>
          <EmailLink user="admin" domain="freakyflyerdelivery.com.au"
            >admin@freakyflyerdelivery.com.au</EmailLink
          >
        </p>
        <p>
          <strong>Warehouse:</strong><br />96 Nicholas Rd, Wanneroo<br />Mon–Fri
          7:00am–3:30pm
        </p>
      </aside>
    </div>
  </section>
</Base>
