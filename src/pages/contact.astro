---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadPage } from '../lib/content.ts';

const slug = 'contact';
const page = await loadPage(slug);
const title = (page?.fm?.title as string) ?? 'Contact | Freaky Flyer Delivery';
const description = (page?.fm?.description as string) ?? '';
---
<BaseLayout {title} description={description}>
  {page ? (
    <Fragment set:html={page.html} />
  ) : (
    <div class="stack">
      <h1>Contact Us</h1>
      <p>
        Ready to launch your next drop? Reach out with your target suburbs and timeline so we can tailor a
        GPS-backed distribution plan for you.
      </p>
    </div>
  )}
</BaseLayout>
