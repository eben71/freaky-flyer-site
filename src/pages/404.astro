---
import BaseLayout from '../layouts/BaseLayout.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<BaseLayout
  title="Page Not Found | Freaky Flyer Delivery"
  description="The page you were looking for has moved or no longer exists."
>
  <section
    class="section surface not-found"
    aria-labelledby="not-found-heading"
  >
    <div class="container not-found__container">
      <SectionHeader
        level={1}
        kicker="404"
        title="We can't find that page"
        description="The link may be outdated or the page has moved."
      />
      <p>
        Return to the home page to explore the latest services, pricing, and
        delivery areas.
      </p>
      <a class="button primary" href="/">Back to home</a>
    </div>
  </section>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
  }

  .not-found__container {
    display: grid;
    gap: var(--space-4);
    justify-items: center;
    max-width: 640px;
  }

  .not-found p {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.8;
  }
</style>
