---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Seo from '../components/Seo.astro';
import LocalBusinessJsonLd from '../components/LocalBusinessJsonLd.astro';
import globalStyles from '../styles/globals.css?inline';

const {
  title = 'Freaky Flyer Delivery',
  description = '',
  image,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo {title} {description} image={image} />
    <link rel="icon" href="/brands/favicon.ico" sizes="any" />
    <link rel="manifest" href="/brands/site.webmanifest" />
    <meta name="theme-color" content="#89040B" />
    <LocalBusinessJsonLd />
    <style is:global set:html={globalStyles}></style>
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to content</a>
    <div class="site-banner" role="status">
      <span class="site-banner__emoji" aria-hidden="true">ðŸš§</span>
      <span>
        <strong>Under Development:</strong>
        We're putting the finishing touches on the Freaky Flyer Delivery website.
      </span>
    </div>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
